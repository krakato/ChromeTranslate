{
  "manifest_version": 3,
  "name": "Translate Extension",
  "version": "3.0",
  "author": "GoldFinger",
  "description": "Extensi√≥n para traducir texto en etiquetas HTML al pasar el puntero y hacer clic derecho. Usamos Google Traductor para traducir.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
    "host_permissions": [
        "*://translate.google.com/*",
        "*://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "match_about_blank": true,
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Translate simple",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}